<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/user"
        android:isScrollContainer="false"
        android:fitsSystemWindows="true"
        tools:context=".activities.UserActivity"
        android:layout_alignParentBottom="true"
        android:weightSum="1">

    <!--  Header Label -->
    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/welcome"
        android:textSize="20sp" />

    <!--  Name -->
    <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="24sp"
            android:layout_gravity="center"/>

    <!--  Email -->
    <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_gravity="center"/>

    <!--  Circle Profile -->
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_profile"
            android:layout_width="169dp"
            android:layout_height="159dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/profile"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp"
            android:layout_gravity="center"/>

    <!--  Enter Button -->
    <ImageButton
        android:id="@+id/btnContacts"
        android:layout_width="329dp"
        android:layout_height="117dp"
        android:layout_gravity="center"
        android:background="@null"
        android:contentDescription="@android:string/VideoView_error_button"
        android:src="@drawable/contact"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/btnEnter"
        android:layout_width="wrap_content"
        android:layout_height="119dp"
        android:layout_gravity="center"
        android:background="@null"
        android:contentDescription="@android:string/VideoView_error_button"
        android:src="@drawable/enter"
        android:visibility="visible" />

    <!--  Logout Button -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="InefficientWeight">

    <ImageButton
        android:id="@+id/btnSpecial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:background="@null"
        android:contentDescription="@string/btn_logout"
        android:src="@drawable/special"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/btnPick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:background="@null"
        android:contentDescription="@string/btn_logout"
        android:src="@drawable/pick2"
        android:visibility="gone" />


</LinearLayout>
    <ImageButton
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@null"
        android:contentDescription="@string/btn_logout"
        android:padding="10dp"
        android:src="@drawable/logout"
        android:visibility="visible"
        tools:ignore="InefficientWeight" />
</LinearLayout>

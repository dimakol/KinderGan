<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/back2"
        android:isScrollContainer="false"
        android:fitsSystemWindows="true"
        tools:context=".activities.TeacherActivity">

    <!--  KinderGan Name -->
    <TextView
            android:id="@+id/ganName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/hint_KGanName"
            android:textSize="20sp"/>

    <!--  KinderGan Class -->
    <TextView
            android:id="@+id/clsNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/hint_KGanClass"
            android:textSize="20sp"
            android:layout_below="@+id/ganName"/>

    <!--  Kid1 Profile -->
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/baby1"
            android:layout_width="169dp"
            android:layout_height="159dp"
            android:src="@drawable/baby"
            app:civ_border_color="@color/color2"
            app:civ_border_width="3dp"
            android:layout_below="@id/clsNum"
            android:layout_marginTop="10dp"/>

    <!--  Kid2 Profile -->
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/baby2"
            android:layout_width="169dp"
            android:layout_height="159dp"
            android:src="@drawable/baby"
            app:civ_border_color="@color/color2"
            app:civ_border_width="3dp"
            android:layout_below="@id/clsNum"
            android:layout_toRightOf="@+id/baby1"
            android:layout_marginTop="10dp"/>

    <!--  Kid3 Profile -->
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/baby3"
            android:layout_width="169dp"
            android:layout_height="159dp"
            android:src="@drawable/baby"
            app:civ_border_color="@color/color2"
            app:civ_border_width="3dp"
            android:layout_below="@id/baby1"
            android:layout_marginTop="10dp"/>

    <!--  Kid4 Profile -->
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/baby4"
            android:layout_width="169dp"
            android:layout_height="159dp"
            android:src="@drawable/baby"
            app:civ_border_color="@color/color2"
            app:civ_border_width="3dp"
            android:layout_below="@id/baby2"
            android:layout_toRightOf="@+id/baby3"
            android:layout_marginTop="10dp"/>

    <!--  Kid5 Profile -->
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/baby5"
            android:layout_width="169dp"
            android:layout_height="159dp"
            android:src="@drawable/baby"
            app:civ_border_color="@color/color2"
            app:civ_border_width="3dp"
            android:layout_below="@id/baby3"
            android:layout_marginTop="10dp"/>

    <!--  Kid6 Profile -->
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/baby6"
            android:layout_width="169dp"
            android:layout_height="159dp"
            android:src="@drawable/baby"
            app:civ_border_color="@color/color2"
            app:civ_border_width="3dp"
            android:layout_below="@id/baby4"
            android:layout_toRightOf="@+id/baby5"
            android:layout_marginTop="10dp"/>

    <!--  Kid Menu -->
    <ImageView
            android:id="@+id/frame"
            android:layout_width="237dp"
            android:layout_height="283dp"
            android:alpha="0.75"
            android:visibility="gone"
            android:src="@drawable/fade"
            android:contentDescription="@string/kid_menu"
            android:layout_centerInParent="true"/>

    <!--  Missing Button -->
    <ImageButton
            android:id="@+id/missBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:visibility="gone"
            android:src="@drawable/miss"
            tools:ignore="ContentDescription"
            android:layout_alignTop="@+id/frame"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

    <!--  Arrived Button -->
    <ImageButton
            android:id="@+id/arrvBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:visibility="gone"
            android:src="@drawable/arrived"
            tools:ignore="ContentDescription"
            android:layout_alignTop="@+id/frame"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

    <!--  Call Button -->
    <ImageButton
            android:id="@+id/BtnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:visibility="gone"
            android:src="@drawable/call"
            tools:ignore="ContentDescription"
            android:layout_alignTop="@+id/frame"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="86dp"/>

    <!--  SMS Button -->
    <ImageButton
            android:id="@+id/BtnSms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:visibility="gone"
            android:src="@drawable/sms"
            tools:ignore="ContentDescription"
            android:layout_alignTop="@+id/frame"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="141dp"/>

    <!--  Details Button -->
    <ImageButton
            android:id="@+id/BtnDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:visibility="gone"
            android:src="@drawable/details"
            tools:ignore="ContentDescription"
            android:layout_alignTop="@+id/frame"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="199dp"/>

    <!--  Close Button -->
    <ImageButton
            android:id="@+id/BtnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:visibility="gone"
            android:src="@drawable/close"
            tools:ignore="ContentDescription"
            android:layout_alignTop="@+id/frame"
            android:layout_alignRight="@+id/frame"/>

    <!--  Menu Button -->
    <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.devsoul.dima.kindergarten.fabbo.FabOptions
                android:id="@+id/fab_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:button_menu="@menu/menu_faboptions"
                app:background_color="@color/color1"
                app:fab_color="@color/color2" />
    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.devsoul.dima.kindergarten">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
            android:name=".app.AppController"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.SignupActivity"/>
        <activity android:name=".activity.SignupParentGanActivity"/>
        <activity android:name=".activity.UserActivity"/>
        <activity android:name=".activity.RegistrationActivity"/>
        <activity android:name=".activity.SignupParentActivity"/>
        <activity android:name=".activity.SignupTeacherActivity"/>
        <activity android:name=".activity.TeacherActivity"/>
        <activity android:name=".activity.SignupKinderGanActivity"/>
    </application>

</manifest>